
@using ControlPagosInbaco.Models
@model IEnumerable<Grado>

@{
    ViewBag.Title = "Listado de Grados";
}

<h2>@ViewBag.Title.</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdGrado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                Establecimiento
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGrado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Establecimiento.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdGrado }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdGrado }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdGrado })
                </td>
            </tr>
        }
    </table>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}